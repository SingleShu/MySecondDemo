            <corners
                android:radius="@dimen/margin_size_8_dp"/>

            <stroke
                android:width="1dp"
                android:color="@color/blue_2bbbe6"/>

            <solid
                android:color="@color/gray_d8d8d8"/>

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

