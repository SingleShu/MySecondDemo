<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/blood_group_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_10_dp"
        android:gravity="center"
        android:lines="1"
        android:text="A型"
        android:textSize="@dimen/text_size_20_sp"/>

    <TextView
        android:id="@+id/blood_group_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_10_dp"
        android:gravity="center"
        android:lines="1"
        android:text="B型"
        android:textSize="@dimen/text_size_20_sp"/>

    <TextView
        android:id="@+id/blood_group_o"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_10_dp"
        android:gravity="center"
        android:lines="1"
        android:text="O型"
        android:textSize="@dimen/text_size_20_sp"/>

    <TextView
        android:id="@+id/blood_group_ab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_10_dp"
        android:gravity="center"
        android:lines="1"
        android:text="AB型"
        android:textSize="@dimen/text_size_20_sp"/>

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_10_dp"
        android:text="@string/cancel"/>

</LinearLayout>