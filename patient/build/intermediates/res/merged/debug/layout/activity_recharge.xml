<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/recharge_submit_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/margin_size_2_dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_size_10_dp"
                    android:layout_marginLeft="@dimen/margin_size_14_dp"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:src="@color/red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_size_10_dp"
                    android:text="选择充值金额"
                    android:textColor="@color/black_231815"
                    android:textSize="@dimen/text_size_16_sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/recharge_money_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/recharge_money_1"
                        style="@style/recharge_radiobtn_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_10_dp"
                        android:layout_marginLeft="@dimen/margin_size_14_dp"
                        android:layout_marginRight="@dimen/margin_size_4_dp"
                        android:layout_marginTop="@dimen/margin_size_10_dp"
                        android:layout_weight="1"
                        android:text="1分"
                        android:visibility="gone">

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/recharge_money_first"
                        style="@style/recharge_radiobtn_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_10_dp"
                        android:layout_marginLeft="@dimen/margin_size_14_dp"
                        android:layout_marginRight="@dimen/margin_size_4_dp"
                        android:layout_marginTop="@dimen/margin_size_10_dp"
                        android:layout_weight="1"
                        android:text="500">

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/recharge_money_second"
                        style="@style/recharge_radiobtn_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_10_dp"
                        android:layout_marginLeft="@dimen/margin_size_4_dp"
                        android:layout_marginRight="@dimen/margin_size_4_dp"
                        android:layout_marginTop="@dimen/margin_size_10_dp"
                        android:layout_weight="1"
                        android:text="1000">

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/recharge_money_third"
                        style="@style/recharge_radiobtn_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_10_dp"
                        android:layout_marginLeft="@dimen/margin_size_4_dp"
                        android:layout_marginRight="@dimen/margin_size_4_dp"
                        android:layout_marginTop="@dimen/margin_size_10_dp"
                        android:layout_weight="1"
                        android:text="2000">

                    </RadioButton>

                    <RadioButton
                        android:id="@+id/recharge_money_other"
                        style="@style/recharge_radiobtn_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_10_dp"
                        android:layout_marginLeft="@dimen/margin_size_4_dp"
                        android:layout_marginRight="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_10_dp"
                        android:layout_weight="1"
                        android:text="其他金额">

                    </RadioButton>

                </RadioGroup>

                <LinearLayout
                    android:id="@+id/recharge_money_other_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@color/gray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_size_10_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="充值金额:"/>

                        <EditText
                            android:id="@+id/recharge_money_other_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_size_10_dp"
                            android:layout_marginRight="@dimen/margin_size_10_dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入充值金额"
                            android:inputType="number"
                            android:textSize="@dimen/text_size_14_sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/margin_size_2_dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_size_10_dp"
                    android:layout_marginLeft="@dimen/margin_size_14_dp"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:src="@color/red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_size_10_dp"
                    android:text="选择充值方式"
                    android:textColor="@color/black_231815"
                    android:textSize="@dimen/text_size_16_sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/recharge_alipay_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/margin_size_28_dp"
                    android:layout_height="@dimen/margin_size_28_dp"
                    android:layout_marginBottom="@dimen/margin_size_6_dp"
                    android:layout_marginLeft="@dimen/margin_size_10_dp"
                    android:layout_marginTop="@dimen/margin_size_6_dp"
                    android:src="@drawable/main_payment_alipay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_10_dp"
                    android:layout_weight="1"
                    android:text="支付宝支付"
                    android:textColor="@color/black_231815"
                    android:textSize="@dimen/text_size_14_sp"/>

                <CheckBox
                    android:id="@+id/recharge_alipay_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_size_14_dp"
                    android:button="@drawable/pay_checkbox_style"
                    android:checked="true"
                    android:enabled="false"/>

            </LinearLayout>

            <Button
                android:id="@+id/recharge_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:layout_marginRight="@dimen/margin_size_14_dp"
                android:layout_marginTop="@dimen/margin_size_20_dp"
                android:background="@drawable/btn_select_style"
                android:text="@string/recharge_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:layout_marginTop="@dimen/margin_size_10_dp"
                android:text="*充值10000元即可成为VIP，享受权威医生服务。"
                android:textSize="@dimen/text_size_12_sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recharge_result_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/recharge_result_iv"
                android:layout_width="@dimen/margin_size_100_dp"
                android:layout_height="@dimen/margin_size_100_dp"
                android:layout_marginTop="@dimen/margin_size_40_dp"
                android:src="@drawable/main_common_success"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10_dp"
                android:gravity="center"
                android:lines="1"
                android:padding="@dimen/margin_size_4_dp"
                android:text="@string/recharge_succeed"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_20_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10_dp"
                android:gravity="center"
                android:lines="1"
                android:padding="@dimen/margin_size_4_dp"
                android:text="@string/recharge_succeed_hint"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_12_sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_32_dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/recharge_result_setting_pay_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_10_dp"
                    android:layout_marginRight="@dimen/margin_size_10_dp"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:background="@drawable/btn_select_style"
                    android:text="@string/setting_pay_password"
                    android:textColor="@color/white"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/recharge_result_continue_recharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_10_dp"
                    android:layout_marginRight="@dimen/margin_size_10_dp"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:text="@string/continue_recharge"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>