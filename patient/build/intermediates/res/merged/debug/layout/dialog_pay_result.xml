<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/result_iv"
        android:layout_width="@dimen/margin_size_100_dp"
        android:layout_height="@dimen/margin_size_100_dp"
        android:layout_marginTop="@dimen/margin_size_20_dp"
        android:src="@drawable/main_common_success"/>

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_size_10_dp"
        android:text="支付成功"
        android:textColor="@color/black_231815"
        android:textSize="@dimen/text_size_16_sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/result_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size_10_dp"
            android:layout_marginLeft="@dimen/margin_size_40_dp"
            android:layout_marginRight="@dimen/margin_size_40_dp"
            android:layout_marginTop="@dimen/margin_size_10_dp"
            android:layout_weight="1"
            android:background="@drawable/shape_sure"
            android:text="填写问诊表"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16_sp"/>

    </LinearLayout>

</LinearLayout>