        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_size_50_dp"
            android:layout_marginBottom="@dimen/margin_size_14_dp"
            android:layout_marginTop="@dimen/margin_size_10_dp"
            android:src="@color/blue_2bbbe6"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/department_ll_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_bar_select_style"
                android:gravity="center"
                android:orientation="vertical"
                android:tag="ll_6">

                <ImageView
                    android:id="@+id/department_iv_7"
                    android:layout_width="@dimen/margin_size_36_dp"
                    android:layout_height="@dimen/margin_size_36_dp"
                    android:layout_marginBottom="@dimen/margin_size_6_dp"
                    android:layout_marginTop="@dimen/margin_size_8_dp"
                    android:clickable="false"
                    android:src="@color/red"/>

                <TextView
                    android:id="@+id/department_tv_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:tag="tv_6"
                    android:text="@string/department_text"
                    android:textColor="@color/blue_2bbbe6"
                    android:textSize="@dimen/text_size_14_sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/department_ll_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_bar_select_style"
                android:gravity="center"
                android:orientation="vertical"
                android:tag="ll_7">

                <ImageView
                    android:id="@+id/department_iv_8"
                    android:layout_width="@dimen/margin_size_36_dp"
                    android:layout_height="@dimen/margin_size_36_dp"
                    android:layout_marginBottom="@dimen/margin_size_6_dp"
                    android:layout_marginTop="@dimen/margin_size_8_dp"
                    android:clickable="false"
                    android:src="@color/red"/>

                <TextView
                    android:id="@+id/department_tv_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:tag="tv_7"
                    android:text="@string/department_text"
