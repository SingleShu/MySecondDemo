<?xml version="1.0" encoding="utf-8"?>
<com.raspberry.library.view.SwipeItemLayout
    android:id="@+id/swipe_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/swipe_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/red"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_size_14_dp"
        android:paddingRight="@dimen/margin_size_14_dp"
        android:text="@string/delete"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/member_icon"
            android:layout_width="@dimen/margin_size_40_dp"
            android:layout_height="@dimen/margin_size_40_dp"
            android:layout_marginBottom="@dimen/margin_size_10_dp"
            android:layout_marginLeft="@dimen/margin_size_14_dp"
            android:layout_marginRight="@dimen/margin_size_10_dp"
            android:layout_marginTop="@dimen/margin_size_10_dp"
            android:src="@drawable/main_headportrait_xlarge"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="小星星（创建人）"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_14_sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10_dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="账号："
                    android:textSize="@dimen/text_size_12_sp"/>

                <TextView
                    android:id="@+id/member_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="138****2468"
                    android:textSize="@dimen/text_size_14_sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.raspberry.library.view.SwipeItemLayout>