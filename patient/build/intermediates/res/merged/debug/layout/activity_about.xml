<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_240_dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/margin_size_100_dp"
                android:layout_height="@dimen/margin_size_100_dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/about_app_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_14_dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_18_sp"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_180_dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/about_android_doctor_qrcode_iv"
                android:layout_width="@dimen/margin_size_100_dp"
                android:layout_height="@dimen/margin_size_100_dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10_dp"
                android:text="@string/android_doctor_download"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_12_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10_dp"
                android:text="@string/recommend"
                android:textSize="@dimen/text_size_10_sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/about_android_patient_qrcode_iv"
                android:layout_width="@dimen/margin_size_100_dp"
                android:layout_height="@dimen/margin_size_100_dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10_dp"
                android:text="@string/android_patient_download"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_12_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10_dp"
                android:text="@string/recommend"
                android:textSize="@dimen/text_size_10_sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/edition_code"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12_sp"/>

            <TextView
                android:id="@+id/edition_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12_sp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/technical_support_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size_14_dp"
            android:layout_marginTop="@dimen/margin_size_10_dp"
            android:gravity="center"
            android:lines="1"
            android:singleLine="true"
            android:text="@string/technical_support"
            android:textSize="@dimen/text_size_10_sp"/>

    </LinearLayout>

</LinearLayout>