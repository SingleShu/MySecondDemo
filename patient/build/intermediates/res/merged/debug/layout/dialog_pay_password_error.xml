<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_20_dp"
        android:gravity="center"
        android:padding="@dimen/margin_size_10_dp"
        android:text="支付密码输入错误，请重试"
        android:textColor="@color/black_231815"
        android:textSize="@dimen/text_size_18_sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_20_dp"
        android:layout_marginTop="@dimen/margin_size_10_dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_size_10_dp">

        <Button
            android:id="@+id/retry_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_20_dp"
            android:layout_marginRight="@dimen/margin_size_10_dp"
            android:layout_weight="1"
            android:background="@drawable/shape_cancel"
            android:text="重试"
            android:textColor="@color/blue_2bbbe6"/>

        <Button
            android:id="@+id/retrieve_password_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_10_dp"
            android:layout_marginRight="@dimen/margin_size_20_dp"
            android:layout_weight="1"
            android:background="@drawable/shape_sure"
            android:text="找回密码"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>