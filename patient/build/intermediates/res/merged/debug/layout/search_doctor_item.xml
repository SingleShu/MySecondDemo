<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/doctor_icon_iv"
        android:layout_width="@dimen/margin_size_60_dp"
        android:layout_height="@dimen/margin_size_60_dp"
        android:layout_margin="@dimen/margin_size_10_dp"
        android:src="@drawable/main_headportrait_xlarge"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/margin_size_80_dp"
                android:text="王医生"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16_sp"/>

            <TextView
                android:id="@+id/doctor_technical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="主任医师"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14_sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_8_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doctor_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/margin_size_80_dp"
                android:text="华西医院"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12_sp"/>

            <TextView
                android:id="@+id/doctor_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="外科"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_10_sp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/detail_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_size_10_dp"
        android:text="@string/see_details"/>

</LinearLayout>