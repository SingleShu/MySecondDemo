<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_sure_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:textColor="#000"
        android:text="是否进入视频咨询？"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_size_10_dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/margin_size_24_dp"
            android:paddingRight="@dimen/margin_size_24_dp"
            android:paddingBottom="@dimen/margin_size_10_dp"
            android:paddingTop="@dimen/margin_size_10_dp"
            android:textSize="16sp"
            android:textColor="#fff"
            android:background="@drawable/shape_sure"
            android:layout_height="wrap_content"
            android:text="确定"
            android:id="@+id/dialog_sure" />
    </RelativeLayout>
</LinearLayout>