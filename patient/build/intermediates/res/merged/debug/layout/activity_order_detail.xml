<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_size_8_dp"
                    android:layout_marginLeft="@dimen/margin_size_14_dp"
                    android:layout_marginTop="@dimen/margin_size_8_dp"
                    android:layout_weight="1"
                    android:text="@string/order_status"
                    android:textColor="@color/black_231815"
                    android:textSize="@dimen/text_size_14_sp"/>

                <TextView
                    android:id="@+id/order_detail_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_size_8_dp"
                    android:layout_marginRight="@dimen/margin_size_14_dp"
                    android:layout_marginTop="@dimen/margin_size_8_dp"
                    android:textSize="@dimen/text_size_14_sp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/green_d2d2d2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:background="@color/gray_f2f2f2"
                    android:paddingBottom="@dimen/margin_size_6_dp"
                    android:paddingLeft="@dimen/margin_size_14_dp"
                    android:paddingTop="@dimen/margin_size_6_dp"
                    android:text="@string/order_info"
                    android:textSize="@dimen/text_size_14_sp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginLeft="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:text="@string/order_number"
                        android:textColor="@color/black_231815"
                        android:textSize="@dimen/text_size_14_sp"/>

                    <TextView
                        android:id="@+id/order_detail_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"
                        android:layout_marginRight="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:lines="1"
                        android:textSize="@dimen/text_size_14_sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_10_dp"
                    android:src="@color/green_d2d2d2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginLeft="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:text="@string/order_create_time"
                        android:textColor="@color/black_231815"
                        android:textSize="@dimen/text_size_14_sp"/>

                    <TextView
                        android:id="@+id/order_detail_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginRight="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:lines="1"
                        android:textSize="@dimen/text_size_14_sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@color/green_d2d2d2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:background="@color/gray_f2f2f2"
                    android:paddingBottom="@dimen/margin_size_6_dp"
                    android:paddingLeft="@dimen/margin_size_14_dp"
                    android:paddingTop="@dimen/margin_size_6_dp"
                    android:text="@string/order_detail"
                    android:textSize="@dimen/text_size_14_sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/order_detail_icon_iv"
                        android:layout_width="@dimen/margin_size_50_dp"
                        android:layout_height="@dimen/margin_size_50_dp"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginLeft="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:src="@drawable/personalcenter_order_videoconsultation"/>

                    <TextView
                        android:id="@+id/order_detail_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"
                        android:layout_weight="1"
                        android:textColor="@color/black_231815"
                        android:textSize="@dimen/text_size_16_sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/order_detail_name_tv"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:text="@string/order_price"
                        android:textSize="@dimen/text_size_16_sp"/>

                    <TextView
                        android:id="@+id/order_detail_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_size_14_dp"
                        android:textColor="@color/red_e84618"
                        android:textSize="@dimen/text_size_16_sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_10_dp"
                    android:src="@color/green_d2d2d2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginLeft="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:layout_weight="1"
                        android:text="@string/order_doctor"
                        android:textColor="@color/black_231815"
                        android:textSize="@dimen/text_size_14_sp"/>

                    <TextView
                        android:id="@+id/order_detail_doctor_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginRight="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:textSize="@dimen/text_size_14_sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/order_detail_order_time_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginLeft="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:layout_weight="1"
                        android:text="@string/order_time"
                        android:textColor="@color/black_231815"
                        android:textSize="@dimen/text_size_14_sp"/>

                    <TextView
                        android:id="@+id/order_detail_order_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginRight="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:textSize="@dimen/text_size_14_sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_10_dp"
                    android:src="@color/green_d2d2d2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_detail_order_price_left_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginLeft="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:layout_weight="1"
                        android:text="@string/order_price"
                        android:textColor="@color/black_231815"
                        android:textSize="@dimen/text_size_14_sp"/>

                    <TextView
                        android:id="@+id/order_detail_order_price_right_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginRight="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:textSize="@dimen/text_size_14_sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_detail_order_price_left_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginLeft="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:layout_weight="1"
                        android:text="@string/order_time"
                        android:textColor="@color/black_231815"
                        android:textSize="@dimen/text_size_14_sp"/>

                    <TextView
                        android:id="@+id/order_detail_order_price_right_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginRight="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:textSize="@dimen/text_size_14_sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_detail_order_price_left_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginLeft="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:layout_weight="1"
                        android:text="@string/order_time"
                        android:textColor="@color/black_231815"
                        android:textSize="@dimen/text_size_14_sp"/>

                    <TextView
                        android:id="@+id/order_detail_order_price_right_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginRight="@dimen/margin_size_14_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:textSize="@dimen/text_size_14_sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@color/green_d2d2d2"/>

                <LinearLayout
                    android:id="@+id/order_detail_action_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:background="@drawable/select_grap_f2f2f2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/order_detail_action_icon"
                        android:layout_width="@dimen/margin_size_20_dp"
                        android:layout_height="@dimen/margin_size_20_dp"
                        android:layout_marginLeft="@dimen/margin_size_14_dp"
                        android:src="@drawable/personalcenter_order_payment"/>

                    <TextView
                        android:id="@+id/order_detail_action_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:layout_weight="1"
                        android:text="@string/order_time"
                        android:textColor="@color/black_231815"
                        android:textSize="@dimen/text_size_16_sp"/>

                    <ImageView
                        android:id="@+id/order_detail_action_right"
                        android:layout_width="@dimen/margin_size_20_dp"
                        android:layout_height="@dimen/margin_size_20_dp"
                        android:layout_marginRight="@dimen/margin_size_14_dp"
                        android:src="@drawable/main_common_more"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/divider_line_iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@color/green_d2d2d2"/>

                <LinearLayout
                    android:id="@+id/order_detail_delete_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_grap_f2f2f2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/margin_size_20_dp"
                        android:layout_height="@dimen/margin_size_20_dp"
                        android:layout_marginLeft="@dimen/margin_size_14_dp"
                        android:src="@drawable/personalcenter_order_cancel"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_size_8_dp"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"
                        android:layout_marginTop="@dimen/margin_size_8_dp"
                        android:layout_weight="1"
                        android:text="取消订单"
                        android:textColor="@color/black_231815"
                        android:textSize="@dimen/text_size_16_sp"/>

                    <ImageView
                        android:layout_width="@dimen/margin_size_20_dp"
                        android:layout_height="@dimen/margin_size_20_dp"
                        android:layout_marginRight="@dimen/margin_size_14_dp"
                        android:src="@drawable/main_common_more"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>