<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bar_top_style">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/margin_size_10_dp"
            android:layout_marginTop="@dimen/margin_size_10_dp"
            android:gravity="center"
            android:text="确认预约信息"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18_sp"/>

        <ImageView
            android:id="@+id/cancel_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_size_10_dp"
            android:src="@drawable/main_common_close"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_16_dp"
        android:layout_marginTop="@dimen/margin_size_16_dp"
        android:gravity="center"
        android:text="请核对以下预约信息是否有误，确认无误后，点击【提交订单】"
        android:textColor="@color/gray_888888"
        android:textSize="@dimen/text_size_12_sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_16_dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_30_dp"
            android:text="预约医师:"
            android:textColor="@color/black_231815"
            android:textSize="@dimen/text_size_14_sp"/>

        <TextView
            android:id="@+id/doctor_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_4_dp"
            android:textColor="@color/black_231815"
            android:textSize="@dimen/text_size_14_sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_10_dp"
        android:src="@color/gray_d2d2d2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_30_dp"
            android:text="预约时间:"
            android:textColor="@color/black_231815"
            android:textSize="@dimen/text_size_14_sp"/>

        <TextView
            android:id="@+id/doctor_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_4_dp"
            android:textColor="@color/black_231815"
            android:textSize="@dimen/text_size_14_sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_10_dp"
        android:src="@color/gray_d2d2d2"/>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_20_dp"
        android:layout_marginTop="@dimen/margin_size_8_dp"
        android:background="@drawable/btn_select_style"
        android:paddingLeft="@dimen/margin_size_20_dp"
        android:paddingRight="@dimen/margin_size_20_dp"
        android:text="提交订单"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16_sp"/>

</LinearLayout>