<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/health_report_disease_information_ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/margin_size_10_dp">

        <TextView
            android:id="@+id/health_report_disease_information_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_231815"
            android:textSize="@dimen/text_size_12_sp"/>

        <TextView
            android:id="@+id/health_report_disease_information_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_10_dp"
            android:textSize="@dimen/text_size_12_sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/health_report_doctor_icon_iv"
            android:layout_width="@dimen/margin_size_24_dp"
            android:layout_height="@dimen/margin_size_24_dp"
            android:layout_marginBottom="@dimen/margin_size_6_dp"
            android:layout_marginLeft="@dimen/margin_size_10_dp"
            android:layout_marginRight="@dimen/margin_size_10_dp"
            android:src="@drawable/main_headportrait_xlarge"/>

        <TextView
            android:id="@+id/health_report_doctor_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_4_dp"
            android:layout_marginRight="@dimen/margin_size_4_dp"
            android:textColor="@color/black_231815"
            android:textSize="@dimen/text_size_12_sp"/>

    </LinearLayout>

</LinearLayout>
