<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2f2f2">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/guide_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/margin_size_80_dp"
        android:background="@drawable/btn_select_style"
        android:text="@string/guide_start"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16_sp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/guide_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/margin_size_40_dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/margin_size_10_dp"
            android:layout_height="@dimen/margin_size_10_dp"
            android:src="@drawable/dot_selector"/>

        <ImageView
            android:layout_width="@dimen/margin_size_10_dp"
            android:layout_height="@dimen/margin_size_10_dp"
            android:layout_margin="@dimen/margin_size_10_dp"
            android:src="@drawable/dot_selector"/>

        <ImageView
            android:layout_width="@dimen/margin_size_10_dp"
            android:layout_height="@dimen/margin_size_10_dp"
            android:src="@drawable/dot_selector"/>

    </LinearLayout>


</FrameLayout>
