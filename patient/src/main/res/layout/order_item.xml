<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/order_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_efefef"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_8_dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/margin_size_2_dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_size_8_dp"
            android:layout_marginLeft="@dimen/margin_size_14_dp"
            android:layout_marginTop="@dimen/margin_size_8_dp"
            android:src="@color/red"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size_8_dp"
            android:layout_marginLeft="@dimen/margin_size_10_dp"
            android:layout_marginTop="@dimen/margin_size_8_dp"
            android:text="@string/order_number"
            android:textColor="@color/black_231815"
            android:textSize="@dimen/text_size_14_sp"/>

        <TextView
            android:id="@+id/order_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size_8_dp"
            android:layout_marginLeft="@dimen/margin_size_10_dp"
            android:layout_marginTop="@dimen/margin_size_8_dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:text="@string/order_number"
            android:textColor="@color/black_231815"
            android:textSize="@dimen/text_size_14_sp"/>

        <TextView
            android:id="@+id/order_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size_8_dp"
            android:layout_marginLeft="@dimen/margin_size_10_dp"
            android:layout_marginRight="@dimen/margin_size_14_dp"
            android:layout_marginTop="@dimen/margin_size_8_dp"
            android:text="@string/no_complete_order"
            android:textSize="@dimen/text_size_14_sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_fafafa">

        <ImageView
            android:id="@+id/order_icon_iv"
            android:layout_width="@dimen/margin_size_60_dp"
            android:layout_height="@dimen/margin_size_60_dp"
            android:layout_marginBottom="@dimen/margin_size_8_dp"
            android:layout_marginLeft="@dimen/margin_size_20_dp"
            android:layout_marginTop="@dimen/margin_size_8_dp"
            android:src="@drawable/personalcenter_order_videogroupconsultation"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_size_8_dp">

            <TextView
                android:id="@+id/order_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/video_consultation"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_18_sp"/>

            <TextView
                android:id="@+id/order_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_size_8_dp"
                android:layout_marginTop="@dimen/margin_size_8_dp"
                android:text="2016"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_12_sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_size_14_dp" android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:background="@drawable/pay_textview_line"
                    android:gravity="center"
                    android:text="@string/video_consultation"
                    android:textColor="@color/gray_888888"
                    android:textSize="@dimen/text_size_14_sp"/>

                <TextView
                    android:id="@+id/order_real_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/video_consultation"
                    android:textColor="@color/black_231815"
                    android:textSize="@dimen/text_size_16_sp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>