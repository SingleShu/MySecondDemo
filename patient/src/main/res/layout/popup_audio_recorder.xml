<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50_transparent"
    android:orientation="vertical">

    <View
        android:id="@+id/popup_photo_click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_size_20_dp"
            android:gravity="center"
            android:text="@string/start_audio_recorder"
            android:textColor="@color/black_231815"/>

        <Chronometer
            android:id="@+id/time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_size_20_dp"
            android:gravity="center"
            android:text="@string/timer_default"
            android:textColor="@color/black_231815"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="@dimen/margin_size_100_dp"
            android:layout_height="@dimen/margin_size_100_dp"
            android:layout_margin="@dimen/margin_size_10_dp"
            android:src="@drawable/main_healthreport_upload_btn_startrecording"/>

        <LinearLayout
            android:id="@+id/button_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/choose_btn_gray_style"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18_sp"/>

            <Button
                android:id="@+id/sure_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/choose_btn_blue_style"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18_sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>