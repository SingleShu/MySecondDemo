<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_10_dp"
        android:gravity="center"
        android:lines="1"
        android:text="订单提交完成，请您尽快支付"
        android:textColor="@color/black_231815"
        android:textSize="@dimen/text_size_16_sp"/>

    <TextView
        android:id="@+id/order_countdown_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_10_dp"
        android:gravity="center"
        android:lines="1"
        android:text="请您在30分钟内完成支付，否则订单会自动取消！"
        android:textSize="@dimen/text_size_12_sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_14_dp"
                    android:layout_marginRight="@dimen/margin_size_14_dp"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_number"
                        android:textColor="@color/black_231815"/>

                    <TextView
                        android:id="@+id/order_nember_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_14_dp"
                    android:layout_marginRight="@dimen/margin_size_14_dp"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_price"
                        android:textColor="@color/black_231815"/>

                    <TextView
                        android:id="@+id/order_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"
                        android:textColor="@color/red_e84618"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_size_10_dp"
                    android:layout_marginLeft="@dimen/margin_size_14_dp"
                    android:layout_marginRight="@dimen/margin_size_14_dp"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/order_time_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约时间："
                        android:textColor="@color/black_231815"/>

                    <TextView
                        android:id="@+id/order_time_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@color/green_d2d2d2"/>

                <LinearLayout
                    android:id="@+id/doctor_detail_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/doctor_icon_iv"
                        android:layout_width="@dimen/margin_size_50_dp"
                        android:layout_height="@dimen/margin_size_50_dp"
                        android:layout_marginBottom="@dimen/margin_size_10_dp"
                        android:layout_marginLeft="@dimen/margin_size_14_dp"
                        android:layout_marginRight="@dimen/margin_size_10_dp"
                        android:layout_marginTop="@dimen/margin_size_10_dp"
                        android:clickable="false"
                        android:src="@drawable/main_headportrait_xlarge"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_size_10_dp"
                            android:layout_marginLeft="@dimen/margin_size_10_dp"
                            android:clickable="false"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/doctor_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:lines="1"
                                android:minWidth="@dimen/margin_size_60_dp"
                                android:textColor="@color/black_231815"
                                android:textSize="@dimen/text_size_16_sp"/>

                            <TextView
                                android:id="@+id/doctor_level_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_size_10_dp"
                                android:clickable="false"
                                android:lines="1"
                                android:textColor="@color/blue_2bbbe6"
                                android:textSize="@dimen/text_size_12_sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_size_10_dp"
                            android:clickable="false"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@id/doctor_hospital_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:lines="1"
                                android:minWidth="@dimen/margin_size_60_dp"
                                android:textSize="@dimen/text_size_12_sp"/>

                            <TextView
                                android:id="@+id/doctor_department_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_size_10_dp"
                                android:clickable="false"
                                android:lines="1"
                                android:textColor="@color/red_e84618"
                                android:textSize="@dimen/text_size_12_sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/margin_size_2_dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_size_10_dp"
                    android:layout_marginLeft="@dimen/margin_size_14_dp"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:src="@color/red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_size_10_dp"
                    android:text="选择支付方式"
                    android:textColor="@color/black_231815"
                    android:textSize="@dimen/text_size_14_sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/balance_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_size_10_dp"
                    android:layout_marginLeft="@dimen/margin_size_14_dp"
                    android:layout_marginRight="@dimen/margin_size_14_dp"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/text_size_30"
                        android:layout_height="@dimen/text_size_30"
                        android:src="@drawable/main_payment_balance"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"
                        android:text="余额支付 "
                        android:textColor="@color/black_231815"/>

                    <TextView
                        android:id="@+id/balance_discount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_231815"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"
                        android:text="当前余额："
                        android:textColor="@color/red_e84618"
                        android:textSize="@dimen/text_size_10_sp"/>

                    <TextView
                        android:id="@+id/balance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"
                        android:layout_weight="1"
                        android:textColor="@color/red_e84618"
                        android:textSize="@dimen/text_size_10_sp"/>

                    <CheckBox
                        android:id="@+id/balance_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/pay_checkbox_style"
                        android:checked="true"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@color/green_d2d2d2"/>

                <LinearLayout
                    android:id="@+id/alipay_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_size_10_dp"
                    android:layout_marginLeft="@dimen/margin_size_14_dp"
                    android:layout_marginRight="@dimen/margin_size_14_dp"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/text_size_30"
                        android:layout_height="@dimen/text_size_30"
                        android:src="@drawable/main_payment_alipay"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"
                        android:layout_weight="1"
                        android:text="支付宝支付"
                        android:textColor="@color/black_231815"/>

                    <CheckBox
                        android:id="@+id/alipay_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/pay_checkbox_style"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@color/green_d2d2d2"/>

                <LinearLayout
                    android:id="@+id/home_group_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_size_10_dp"
                    android:layout_marginLeft="@dimen/margin_size_14_dp"
                    android:layout_marginRight="@dimen/margin_size_14_dp"
                    android:layout_marginTop="@dimen/margin_size_10_dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/text_size_30"
                        android:layout_height="@dimen/text_size_30"
                        android:src="@drawable/main_payment_familygroup"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"
                        android:text="家庭组支付 "
                        android:textColor="@color/black_231815"/>

                    <TextView
                        android:id="@+id/home_group_discount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_231815"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"
                        android:text="当前余额："
                        android:textColor="@color/red_e84618"
                        android:textSize="@dimen/text_size_10_sp"/>

                    <TextView
                        android:id="@+id/home_group_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_10_dp"
                        android:layout_weight="1"
                        android:textColor="@color/red_e84618"
                        android:textSize="@dimen/text_size_10_sp"/>

                    <CheckBox
                        android:id="@+id/home_group_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/pay_checkbox_style"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_size_10_dp"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:layout_marginRight="@dimen/margin_size_14_dp"
                android:layout_marginTop="@dimen/margin_size_10_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击[确认支付] 表示您已阅读并同意"
                    android:textSize="@dimen/text_size_10_sp"/>

                <TextView
                    android:id="@+id/agreement_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《医星汇用户服务协议》"
                    android:textColor="@color/blue_2bbbe6"
                    android:textSize="@dimen/text_size_10_sp"/>

            </LinearLayout>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_size_10_dp"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:layout_marginRight="@dimen/margin_size_14_dp"
                android:layout_marginTop="@dimen/margin_size_10_dp"
                android:background="@drawable/btn_select_style"
                android:text="确认支付"
                android:textColor="@color/white"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>