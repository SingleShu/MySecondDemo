<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="50dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_custom"
        android:gravity="center"
        android:textColor="@color/black"
        android:paddingRight="@dimen/margin_size_14_dp"
        android:paddingLeft="@dimen/margin_size_14_dp"
        android:paddingTop="@dimen/margin_size_8_dp"
        android:paddingBottom="@dimen/margin_size_8_dp"/>
    <View
        android:layout_width="0.5dp"
        android:layout_height="wrap_content"
        android:background="@color/gray7"/>
</LinearLayout>