<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_size_4_dp">

    <ImageView
        android:id="@+id/multi_select_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/main_healthreport_upload_addphoto"/>

    <ImageView
        android:id="@+id/multi_select_item_cancel"
        android:layout_width="@dimen/margin_size_20_dp"
        android:layout_height="@dimen/margin_size_20_dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/main_healthreport_upload_addphoto_delete"/>

</RelativeLayout>