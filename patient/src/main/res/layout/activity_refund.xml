<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_10_dp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_size_10_dp"
            android:paddingTop="@dimen/margin_size_10_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:layout_weight="1"
                android:text="订单金额"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_16_sp"/>

            <TextView
                android:id="@+id/refund_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_size_14_dp"
                android:textSize="@dimen/text_size_16_sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@color/green_d2d2d2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_10_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_size_10_dp"
            android:paddingTop="@dimen/margin_size_10_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:text="扣除款项"
                android:textColor="@color/black_231815" android:textSize="@dimen/text_size_16_sp"/>

            <ImageView
                android:id="@+id/refund_problem_iv"
                android:layout_width="@dimen/margin_size_20_dp"
                android:layout_height="@dimen/margin_size_20_dp"
                android:layout_marginLeft="@dimen/margin_size_10_dp"
                android:src="@drawable/main_refund_question"/>

            <TextView
                android:id="@+id/refund_deduct_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_size_14_dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="@dimen/text_size_16_sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@color/green_d2d2d2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_10_dp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_size_10_dp"
            android:paddingTop="@dimen/margin_size_10_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:layout_weight="1"
                android:text="实际退款"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_16_sp"/>

            <TextView
                android:id="@+id/refund_real_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_size_14_dp"
                android:textSize="@dimen/text_size_16_sp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/refund_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_14_dp"
        android:layout_marginRight="@dimen/margin_size_14_dp"
        android:layout_marginTop="@dimen/margin_size_24_dp"
        android:background="@drawable/btn_select_style"
        android:text="确认退款"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16_sp"/>

    <TextView
        android:id="@+id/refund_explain_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_14_dp"
        android:layout_marginRight="@dimen/margin_size_14_dp"
        android:layout_marginTop="@dimen/margin_size_24_dp"
        android:background="@drawable/selector_bar_select_style"
        android:lineSpacingMultiplier="1.5"
        android:text="1.申请退款成功后，会将退款金额返回您所使用的支付平台账户中；\n2.到账时间为1-15个工作日，具体情况视平台而定，如有疑问，请咨询客服400-885-9120。"/>

</LinearLayout>