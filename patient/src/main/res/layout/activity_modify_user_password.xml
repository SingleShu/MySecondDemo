<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_10_dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@color/green_d2d2d2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_60_dp"
            android:background="@drawable/selector_bar_select_style"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:minWidth="@dimen/margin_size_100_dp"
                android:text="输入旧密码"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_16_sp"/>

            <EditText
                android:id="@+id/modify_pwd_oldpwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_10_dp"
                android:layout_marginRight="@dimen/margin_size_10_dp"
                android:background="@null"
                android:hint="@string/input_old_password"
                android:lines="1"
                android:singleLine="true"
                android:textSize="@dimen/text_size_16_sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@color/green_d2d2d2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_60_dp"
            android:background="@drawable/selector_bar_select_style"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:minWidth="@dimen/margin_size_100_dp"
                android:text="输入新密码"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_16_sp"/>

            <EditText
                android:id="@+id/modify_pwd_newpwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_10_dp"
                android:layout_marginRight="@dimen/margin_size_10_dp"
                android:background="@null"
                android:hint="@string/new_password"
                android:lines="1"
                android:singleLine="true"
                android:textSize="@dimen/text_size_16_sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@color/green_d2d2d2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_60_dp"
            android:background="@drawable/selector_bar_select_style"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:minWidth="@dimen/margin_size_100_dp"
                android:text="再次输入"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_16_sp"/>

            <EditText
                android:id="@+id/modify_pwd_newpwd_again_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_10_dp"
                android:layout_marginRight="@dimen/margin_size_10_dp"
                android:background="@null"
                android:hint="@string/again_input_password"
                android:lines="1"
                android:singleLine="true"
                android:textSize="@dimen/text_size_16_sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@color/green_d2d2d2"/>

    </LinearLayout>

    <Button
        android:id="@+id/modify_pwd_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_14_dp"
        android:layout_marginRight="@dimen/margin_size_14_dp"
        android:layout_marginTop="@dimen/margin_size_30_dp"
        android:background="@drawable/btn_select_style"
        android:text="@string/submit_text"/>

</LinearLayout>