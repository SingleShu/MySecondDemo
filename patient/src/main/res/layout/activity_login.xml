<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_login"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2f2f2">

    <TextView
        android:id="@+id/login_top_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/blue_2bbbe6"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:text="@string/login_btn_text"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18_sp"/>

    <TextView
        android:id="@+id/call_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/blue_2bbbe6"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:paddingBottom="@dimen/margin_size_6_dp"
        android:paddingLeft="@dimen/margin_size_14_dp"
        android:paddingRight="@dimen/margin_size_14_dp"
        android:paddingTop="@dimen/margin_size_6_dp"
        android:text="联系客服"
        android:textColor="@color/text_select"
        android:textSize="@dimen/text_size_14_sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="@dimen/margin_size_76_dp"
            android:layout_height="@dimen/margin_size_76_dp"
            android:layout_marginBottom="@dimen/margin_size_40_dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_14_dp"
            android:layout_marginRight="@dimen/margin_size_14_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/margin_size_18_dp"
                android:layout_height="@dimen/margin_size_18_dp"
                android:layout_marginLeft="@dimen/margin_size_24_dp"
                android:background="@drawable/main_login_cellphone"/>

            <EditText
                android:id="@+id/login_username_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_46_dp"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:background="@null"
                android:hint="@string/username_hint"
                android:inputType="phone"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_14_sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_14_dp"
            android:layout_marginRight="@dimen/margin_size_14_dp"
            android:src="@color/green_d2d2d2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_14_dp"
            android:layout_marginRight="@dimen/margin_size_14_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/margin_size_18_dp"
                android:layout_height="@dimen/margin_size_18_dp"
                android:layout_marginLeft="@dimen/margin_size_24_dp"
                android:background="@drawable/main_login_password"/>

            <EditText
                android:id="@+id/login_userpwd_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_46_dp"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:background="@null"
                android:hint="@string/userpwd_hint"
                android:inputType="textPassword"
                android:textColor="@color/black_231815"
                android:textSize="@dimen/text_size_14_sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_14_dp"
            android:layout_marginRight="@dimen/margin_size_14_dp"
            android:src="@color/green_d2d2d2"/>

        <Button
            android:id="@+id/login_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_44_dp"
            android:layout_marginBottom="@dimen/margin_size_10_dp"
            android:layout_marginLeft="@dimen/margin_size_14_dp"
            android:layout_marginRight="@dimen/margin_size_14_dp"
            android:layout_marginTop="@dimen/margin_size_24_dp"
            android:background="@drawable/btn_select_style"
            android:text="@string/login_btn_text"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16_sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_size_10_dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_size_20_dp">

        <TextView
            android:id="@+id/login_help_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_size_10_dp"
            android:text="@string/login_help_text"
            android:textColor="@color/blue_2bbbe6"
            android:textSize="@dimen/text_size_14_sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_size_10_dp"
            android:layout_marginRight="@dimen/margin_size_10_dp"
            android:src="@color/blue_2bbbe6"/>

        <TextView
            android:id="@+id/login_register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_size_10_dp"
            android:text="@string/login_register_text"
            android:textColor="@color/blue_2bbbe6"
            android:textSize="@dimen/text_size_14_sp"/>

    </LinearLayout>

</RelativeLayout>
