<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bar_white_style"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/department_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_14_dp"
        android:clickable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/department_item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="left"
            android:textSize="@dimen/text_size_16_sp"/>

        <ImageView
            android:id="@+id/department_item_icon_iv"
            android:layout_width="@dimen/margin_size_20_dp"
            android:layout_height="@dimen/margin_size_20_dp"
            android:src="@drawable/main_common_more"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@color/green_d2d2d2"/>

</LinearLayout>