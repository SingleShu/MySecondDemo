<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_content_click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/black_20p">

        <LinearLayout
            android:id="@+id/popup_anima"
            android:layout_width="@dimen/margin_size_280_dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shap_main_qrcode_message"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/margin_size_20_dp">

            <ImageView
                android:id="@+id/qrcode"
                android:layout_width="@dimen/margin_size_230_dp"
                android:layout_height="@dimen/margin_size_230_dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/qrcode_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_20_dp"
                android:gravity="center"
                android:lines="1"
                android:text="@string/qrcode_hint_text"
                android:textColor="@color/black"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>