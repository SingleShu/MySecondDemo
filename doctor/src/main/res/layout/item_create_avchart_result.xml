<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_create_avchart_addpatient_result"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_marginTop="@dimen/margin_size_10_dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_80_dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_createav_head_iv"
            android:layout_width="@dimen/margin_size_50_dp"
            android:layout_height="@dimen/margin_size_50_dp"
            android:layout_marginLeft="@dimen/margin_size_14_dp"
            android:layout_marginRight="@dimen/margin_size_14_dp"
            android:layout_centerVertical="true"
            app:civ_border_overlay="true"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/item_createav_name_tv"
            style="@style/doctor_main_text_content"
            android:textSize="@dimen/text_size_16_sp"
            android:layout_toRightOf="@+id/item_createav_head_iv"
            android:layout_marginTop="@dimen/margin_size_16_dp"
            android:text=""
            />
        <LinearLayout
            android:layout_marginTop="@dimen/margin_size_10_dp"
            android:layout_toRightOf="@+id/item_createav_head_iv"
            android:layout_below="@+id/item_createav_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14_sp"
                android:text="性别："/>
            <TextView
                android:id="@+id/item_createav_sex_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14_sp"
                android:layout_marginRight="@dimen/margin_size_10_dp"
                android:text="保密"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14_sp"
                android:text="年龄："/>
            <TextView
                android:id="@+id/item_createav_age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14_sp"
                android:text="保密"/>
        </LinearLayout>
        <TextView
            android:id="@+id/create_avchart_addpatient_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="@dimen/margin_size_10_dp"
            android:textSize="@dimen/margin_size_16_dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_size_14_dp"
            android:text="@string/delete"/>
        <View style="@style/line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>