<?xml version="1.0" encoding="utf-8"?>
<com.raspberry.library.view.SwipeItemLayout
    android:id="@+id/item_myfriends_sil"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_size_70_dp">

    <TextView
        android:id="@+id/item_myfriends_delete"
        android:paddingRight="@dimen/margin_size_14_dp"
        android:paddingLeft="@dimen/margin_size_14_dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:textColor="@color/white"
        android:text="@string/delete"/>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="@dimen/margin_size_10_dp"
            android:id="@+id/item_myfriends_iv"
            android:layout_width="@dimen/margin_size_50_dp"
            android:layout_height="@dimen/margin_size_50_dp"
            app:civ_border_overlay="true"
            app:civ_fill_color="@color/black"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/item_myfriends_name_tv"
            style="@style/doctor_main_text_content"
            android:textSize="@dimen/text_size_16_sp"
            android:layout_toRightOf="@+id/item_myfriends_iv"
            android:layout_marginTop="@dimen/margin_size_10_dp"
            android:text="猫小咪"
            />
        <TextView
            android:id="@+id/item_myfriends_doctortitle_tv"
            android:layout_toRightOf="@+id/item_myfriends_name_tv"
            android:layout_marginTop="@dimen/margin_size_14_dp"
            android:layout_marginLeft="@dimen/margin_size_14_dp"
            android:textSize="@dimen/text_size_13_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_blue_0888ff"
            android:text="主任医师"/>
        <LinearLayout
            android:layout_marginTop="@dimen/margin_size_4_dp"
            android:layout_toRightOf="@+id/item_myfriends_iv"
            android:layout_below="@+id/item_myfriends_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_myfriends_hospital_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_13_sp"
                android:layout_marginRight="@dimen/margin_size_10_dp"
                android:text="华西医院"/>

            <TextView
                android:id="@+id/item_myfriends_department_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_13_sp"
                android:text="外科"/>
        </LinearLayout>
    </RelativeLayout>


</com.raspberry.library.view.SwipeItemLayout>