<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/layoutAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="com.shkjs.doctor.activity.BindingAlipayNextActivity">
    <include layout="@layout/top_title_rv_layout"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size_8_dp"
        android:textSize="@dimen/text_size_12_sp"
        android:lineSpacingExtra="@dimen/margin_size_4_dp"
        android:text="*此操作必须绑定您本人实名认证的支付宝账户，之后资金将结算至该账户。"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/margin_size_2_dp"
        android:layout_height="@dimen/margin_size_43_dp">
        <TextView
            android:id="@+id/binding_next_name_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14_sp"
            android:layout_marginLeft="@dimen/margin_size_10_dp"
            android:layout_marginRight="@dimen/margin_size_4_dp"
            android:text="真实姓名"/>
        <EditText
            android:id="@+id/binding_next_name_edittext_tv"
            android:layout_toRightOf="@+id/binding_next_name_text_tv"
            android:paddingTop="@dimen/margin_size_4_dp"
            android:paddingBottom="@dimen/margin_size_4_dp"
            android:paddingRight="@dimen/margin_size_4_dp"
            android:paddingLeft="@dimen/margin_size_20_dp"
            android:background="@null"
            android:enabled="false"
            android:hint="请输入真实姓名"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_13_sp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/margin_size_2_dp"
        android:layout_height="@dimen/margin_size_43_dp">
        <TextView
            android:id="@+id/binding_next_phone_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14_sp"
            android:layout_marginLeft="@dimen/margin_size_10_dp"
            android:layout_marginRight="@dimen/margin_size_4_dp"
            android:text="账号"/>
        <EditText
            android:id="@+id/binding_next_phone_edittext_tv"
            android:layout_marginLeft="@dimen/margin_size_30_dp"
            android:layout_toRightOf="@+id/binding_next_phone_text_tv"
            android:paddingTop="@dimen/margin_size_4_dp"
            android:paddingBottom="@dimen/margin_size_4_dp"
            android:paddingRight="@dimen/margin_size_4_dp"
            android:paddingLeft="@dimen/margin_size_20_dp"
            android:background="@null"
            android:hint="手机号/邮箱"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_13_sp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/margin_size_2_dp"
        android:layout_height="@dimen/margin_size_43_dp">
        <TextView
            android:id="@+id/binding_next_phone_again_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14_sp"
            android:layout_marginLeft="@dimen/margin_size_10_dp"
            android:layout_marginRight="@dimen/margin_size_4_dp"
            android:text="再次确认"/>
        <EditText
            android:id="@+id/binding_next_phone_edittext_again"
            android:layout_toRightOf="@+id/binding_next_phone_again_tv"
            android:paddingTop="@dimen/margin_size_4_dp"
            android:paddingBottom="@dimen/margin_size_4_dp"
            android:paddingRight="@dimen/margin_size_4_dp"
            android:paddingLeft="@dimen/margin_size_20_dp"
            android:background="@null"
            android:hint="手机号/邮箱"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_13_sp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:id="@+id/binding_alipay_final_tv"
        android:textColor="@color/white"
        android:text="绑定"
        android:gravity="center"
        android:layout_margin="@dimen/margin_size_20_dp"
        android:padding="@dimen/margin_size_10_dp"
        android:background="@drawable/shape_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
