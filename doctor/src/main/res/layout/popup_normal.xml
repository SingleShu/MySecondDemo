<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_content_click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/black_20p">

        <LinearLayout
            android:id="@+id/popup_anima"
            android:layout_width="@dimen/margin_size_240_dp"
            android:layout_height="@dimen/margin_size_260_dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shap_main_qrcode_message"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/margin_size_20_dp">


            <ImageView
                android:id="@+id/qrcode"
                android:layout_width="@dimen/margin_size_180_dp"
                android:layout_height="@dimen/margin_size_180_dp"
                android:src="@drawable/qrcode"/>
            <TextView
                android:id="@+id/qrcode_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_18_dp"
                android:text="扫描二维码图片,关注我"
                android:textColor="@color/black"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>