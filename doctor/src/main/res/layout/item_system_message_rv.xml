<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_size_10_dp"
    android:background="@color/gray"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_sys_msg_head_rl"
        android:layout_below="@+id/item_sys_msg_time"
        android:layout_width="@dimen/margin_size_30_dp"
        android:layout_height="@dimen/margin_size_30_dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_sys_msg_head_iv"
            android:layout_width="@dimen/margin_size_30_dp"
            android:layout_height="@dimen/margin_size_30_dp"
            android:src="@drawable/main_message_headportrait" />
        <!--<ImageView-->
            <!--android:id="@+id/item_sys_msg_red_dot"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_width="@dimen/margin_size_6_dp"-->
            <!--android:layout_height="@dimen/margin_size_6_dp"-->
            <!--android:background="@drawable/shape_circle_red"/>-->
    </RelativeLayout>

    <TextView
        android:id="@+id/item_sys_msg_time"
        android:background="@drawable/shap_personal_next"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_size_10_dp"
        android:textSize="@dimen/text_size_12_sp"
        android:padding="@dimen/margin_size_6_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-10-17 16::35"/>
    <LinearLayout
        android:id="@+id/item_sys_msg_ll"
        android:layout_below="@+id/item_sys_msg_time"
        android:background="@drawable/shape_white"
        android:layout_marginLeft="@dimen/margin_size_10_dp"
        android:layout_toRightOf="@+id/item_sys_msg_head_rl"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_sys_msg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_6_dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="标题"/>
        <View
            style="@style/line" />
        <TextView
            android:layout_marginLeft="@dimen/margin_size_8_dp"
            android:layout_marginRight="@dimen/margin_size_8_dp"
            android:layout_marginTop="@dimen/margin_size_16_dp"
            android:id="@+id/item_sys_msg_content"
            android:lineSpacingExtra="@dimen/margin_size_4_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size_6_dp"
            android:textSize="@dimen/text_size_13_sp"
            android:text="您已认证专家成功，请及时联系医院相关部门，获得您的证书。"/>
        <!--<View-->
            <!--style="@style/line" />-->
        <TextView
            android:id="@+id/item_sys_msg_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_size_1_dp"
            android:layout_marginBottom="@dimen/margin_size_1_dp"
            android:layout_marginLeft="@dimen/margin_size_1_dp"
            android:paddingRight="@dimen/margin_size_6_dp"
            android:text=""/>
    </LinearLayout>

</RelativeLayout>