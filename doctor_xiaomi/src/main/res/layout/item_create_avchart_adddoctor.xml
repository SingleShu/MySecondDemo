<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/margin_size_4_dp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="@dimen/margin_size_10_dp"
        android:id="@+id/item_create_avchart_iv"
        android:layout_width="@dimen/margin_size_50_dp"
        android:layout_height="@dimen/margin_size_50_dp"
        app:civ_border_overlay="true"
        app:civ_fill_color="@color/black"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/item_create_avchart_name_tv"
        style="@style/doctor_main_text_content"
        android:textSize="@dimen/text_size_16_sp"
        android:layout_toRightOf="@+id/item_create_avchart_iv"
        android:layout_marginTop="@dimen/margin_size_10_dp"
        android:text="猫小咪"
        />
    <TextView
        android:id="@+id/item_create_avchart_hospital_tv"
        android:layout_toRightOf="@+id/item_create_avchart_name_tv"
        android:layout_marginTop="@dimen/margin_size_14_dp"
        android:layout_marginLeft="@dimen/margin_size_10_dp"
        android:textSize="@dimen/text_size_12_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_create_avchart_add_delete"
        android:lines="1"
        android:ellipsize="end"
        android:text="四川省人民医院"/>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_size_4_dp"
        android:layout_toRightOf="@+id/item_create_avchart_iv"
        android:layout_below="@+id/item_create_avchart_name_tv"
        android:layout_toLeftOf="@+id/item_create_avchart_add_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_create_avchart_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_13_sp"
            android:textColor="@color/red"
            android:layout_marginRight="@dimen/margin_size_10_dp"
            android:text="消化内科"/>
        <TextView
            android:id="@+id/item_create_avchart_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_blue_0888ff"
            android:textSize="@dimen/text_size_13_sp"
            android:text="主任医师"/>
    </LinearLayout>

    <Button
        android:id="@+id/item_create_avchart_add_delete"
        android:layout_width="@dimen/margin_size_60_dp"
        android:layout_height="@dimen/margin_size_35_dp"
        android:background="@drawable/shape_sure"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/margin_size_10_dp"
        android:text="@string/delete"/>

</RelativeLayout>