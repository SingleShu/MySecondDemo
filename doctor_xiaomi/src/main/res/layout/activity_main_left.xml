<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_left"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/margin_size_300_dp"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="@color/gray"
    android:orientation="vertical"
    android:tag="LEFT">

    <RelativeLayout
        android:id="@+id/main_left_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/main_left_image_iv"
            android:layout_width="@dimen/margin_size_90_dp"
            android:layout_height="@dimen/margin_size_90_dp">

            <ImageView
                android:id="@+id/main_left_icon_iv"
                android:layout_width="@dimen/margin_size_80_dp"
                android:layout_height="@dimen/margin_size_80_dp"
                android:layout_centerInParent="true"
                android:background="@color/blue"/>

            <ImageView
                android:id="@+id/main_left_icon_vip_iv"
                android:layout_width="@dimen/margin_size_20_dp"
                android:layout_height="@dimen/margin_size_20_dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/red"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/main_left_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_14_dp"
            android:layout_toRightOf="@id/main_left_image_iv"
            android:text="@string/app_name"/>

        <ImageView
            android:id="@+id/main_left_user_qr_code_iv"
            android:layout_width="@dimen/margin_size_80_dp"
            android:layout_height="@dimen/margin_size_80_dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/green"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_20_dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/main_left_physical_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/margin_size_32_dp"
                android:layout_height="@dimen/margin_size_32_dp"
                android:layout_margin="@dimen/margin_size_8_dp"
                android:background="@color/blue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:gravity="center_vertical"
                android:text="@string/user_personal_text"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/main_left_line_iv"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/main_left_physical_ll"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/main_left_history_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_left_line_iv"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/margin_size_32_dp"
                android:layout_height="@dimen/margin_size_32_dp"
                android:layout_margin="@dimen/margin_size_8_dp"
                android:background="@color/blue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:gravity="center_vertical"
                android:text="@string/user_platform_text"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_20_dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/margin_size_32_dp"
                android:layout_height="@dimen/margin_size_32_dp"
                android:layout_margin="@dimen/margin_size_8_dp"
                android:background="@color/blue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:gravity="center_vertical"
                android:text="@string/user_platform_text"/>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_20_dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/margin_size_32_dp"
                android:layout_height="@dimen/margin_size_32_dp"
                android:layout_margin="@dimen/margin_size_8_dp"
                android:background="@color/blue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:gravity="center_vertical"
                android:text="@string/user_platform_text"/>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_20_dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/margin_size_32_dp"
                android:layout_height="@dimen/margin_size_32_dp"
                android:layout_margin="@dimen/margin_size_8_dp"
                android:background="@color/blue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:gravity="center_vertical"
                android:text="@string/user_platform_text"/>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_20_dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/margin_size_32_dp"
                android:layout_height="@dimen/margin_size_32_dp"
                android:layout_margin="@dimen/margin_size_8_dp"
                android:background="@color/blue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:gravity="center_vertical"
                android:text="@string/user_platform_text"/>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_20_dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/margin_size_32_dp"
                android:layout_height="@dimen/margin_size_32_dp"
                android:layout_margin="@dimen/margin_size_8_dp"
                android:background="@color/blue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_14_dp"
                android:gravity="center_vertical"
                android:text="@string/user_platform_text"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
