<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_size_12_dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/income_detail_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16_sp"
        android:text="图文咨询"/>
    <TextView
        android:id="@+id/income_detail_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/income_detail_title_tv"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16_sp"
        android:text="+280.00"/>
    <TextView
        android:id="@+id/income_detail_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_grey_999999"
        android:layout_below="@+id/income_detail_title_tv"
        android:layout_marginTop="@dimen/margin_size_4_dp"
        android:textSize="@dimen/text_size_14_sp"
        android:text="2016-10-9 11:04"/>
    <TextView
        android:id="@+id/income_detail_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/income_detail_money_tv"
        android:layout_marginTop="@dimen/margin_size_4_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14_sp"
        android:text="成功"/>

</RelativeLayout>