<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/layoutAll"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shkjs.doctor.activity.SearchDoctorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_blue_0888ff"
        android:layout_height="@dimen/margin_size_43_dp">
        <ImageButton
            android:id="@+id/search_doctor_return_ibtn"
            android:layout_width="@dimen/margin_size_22_dp"
            android:layout_height="@dimen/margin_size_22_dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_size_8_dp"
            android:background="@drawable/toolbar_back_select_style"/>
        <EditText
            android:id="@+id/search_doctor_edit"
            android:layout_toLeftOf="@+id/search_doctor_searchbtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_28_dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_size_16_dp"
            android:layout_marginRight="@dimen/margin_size_16_dp"
            android:layout_toRightOf="@+id/search_doctor_return_ibtn"
            android:textSize="@dimen/text_size_13_sp"
            android:paddingLeft="@dimen/margin_size_4_dp"
            android:inputType="number"
            android:hint="@string/search_doctor"
            android:background="@drawable/shape_white"/>
        <ImageButton
            android:id="@+id/search_doctor_searchbtn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_size_8_dp"
            android:layout_width="@dimen/margin_size_20_dp"
            android:layout_height="@dimen/margin_size_20_dp"
            android:background="@drawable/actionbar_search_selector"/>
    </RelativeLayout>

    <TextView
        android:layout_marginBottom="@dimen/margin_size_10_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_size_8_dp"
        android:textSize="@dimen/text_size_12_sp"
        android:lineSpacingExtra="@dimen/margin_size_4_dp"
        android:text="@string/search_doctor_warning"/>


    <RelativeLayout
        android:id="@+id/search_result_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_70_dp"
        android:visibility="gone">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="@dimen/margin_size_10_dp"
            android:id="@+id/search_doctor_iv"
            android:layout_width="@dimen/margin_size_50_dp"
            android:layout_height="@dimen/margin_size_50_dp"
            app:civ_border_overlay="true"
            app:civ_fill_color="@color/black"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/search_doctor_name_tv"
            style="@style/doctor_main_text_content"
            android:textSize="@dimen/text_size_16_sp"
            android:layout_toRightOf="@+id/search_doctor_iv"
            android:layout_marginTop="@dimen/margin_size_10_dp"
            android:text="猫小咪"
            />
        <TextView
            android:id="@+id/search_doctor_hospital_tv"
            android:layout_toRightOf="@+id/search_doctor_name_tv"
            android:layout_marginTop="@dimen/margin_size_14_dp"
            android:layout_marginLeft="@dimen/margin_size_14_dp"
            android:textSize="@dimen/text_size_12_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四川省人民医院"/>
        <LinearLayout
            android:layout_marginTop="@dimen/margin_size_4_dp"
            android:layout_toRightOf="@+id/search_doctor_iv"
            android:layout_below="@+id/search_doctor_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/search_doctor_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_13_sp"
                android:textColor="@color/red"
                android:layout_marginRight="@dimen/margin_size_10_dp"
                android:text="消化内科"/>
            <TextView
                android:id="@+id/search_doctor_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_blue_0888ff"
                android:textSize="@dimen/text_size_13_sp"
                android:text="主任医师"/>
        </LinearLayout>

        <Button
            android:id="@+id/search_doctor_add_delete"
            android:layout_width="@dimen/margin_size_60_dp"
            android:layout_height="@dimen/margin_size_35_dp"
            android:background="@drawable/shape_sure"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/margin_size_10_dp"
            android:text="@string/add"/>
        <View style="@style/line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</LinearLayout>
