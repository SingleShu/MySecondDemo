<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layoutAll"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="match_parent"
    tools:context="com.shkjs.doctor.activity.UploadAuthenDataActivity">

    <include layout="@layout/top_title_rv_layout"/>

    <RelativeLayout
        android:id="@+id/upload_authen_head_rl"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_size_8_dp"
        android:layout_width="match_parent"
        android:padding="@dimen/margin_size_10_dp"
        android:layout_height="@dimen/margin_size_70_dp">
        <TextView
            android:layout_marginTop="@dimen/margin_size_4_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="上传头像"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_size_12_sp"
            android:layout_marginBottom="@dimen/margin_size_4_dp"
            android:text="建议上传白底、穿白大褂的本人证件照"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/upload_authen_head_iv"
            android:layout_width="@dimen/margin_size_50_dp"
            android:layout_height="@dimen/margin_size_50_dp"
            android:layout_centerVertical="true"
            app:civ_border_overlay="true"
            app:civ_fill_color="@color/black"
            android:layout_toLeftOf="@+id/upload_authen_head_right_iv"
            android:layout_marginRight="@dimen/margin_size_10_dp"
            android:src="@drawable/default_head_rect"/>
        <ImageView
            android:id="@+id/upload_authen_head_right_iv"
            android:layout_width="@dimen/margin_size_16_dp"
            android:layout_height="@dimen/margin_size_16_dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/main_common_more"/>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_4_dp"
        android:textSize="@dimen/text_size_12_sp"
        android:layout_marginLeft="@dimen/margin_size_10_dp"
        android:textColor="@color/color_blue_0888ff"
        android:text="*提示，长按以下选项截图框边缘，大小可调"/>
    <RelativeLayout
        android:id="@+id/upload_authen_zheng_rl"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_size_4_dp"
        android:layout_width="match_parent"
        android:padding="@dimen/margin_size_10_dp"
        android:layout_height="@dimen/margin_size_70_dp">
        <TextView
            android:layout_marginTop="@dimen/margin_size_4_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="身份证正面"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_size_12_sp"
            android:layout_marginBottom="@dimen/margin_size_4_dp"
            android:text="请上传身份证正面照片，正面信息必须清楚"/>
        <ImageView
            android:id="@+id/upload_authen_zheng_iv"
            android:layout_width="@dimen/margin_size_50_dp"
            android:layout_height="@dimen/margin_size_50_dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/upload_authen_zheng_right_iv"
            android:layout_marginRight="@dimen/margin_size_10_dp"
            android:src="@drawable/main_certification_idcard"/>
        <ImageView
            android:id="@+id/upload_authen_zheng_right_iv"
            android:layout_width="@dimen/margin_size_16_dp"
            android:layout_height="@dimen/margin_size_16_dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/main_common_more"/>
    </RelativeLayout>
    <View style="@style/line"/>
    <RelativeLayout
        android:id="@+id/upload_authen_fan_rl"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="@dimen/margin_size_10_dp"
        android:layout_height="@dimen/margin_size_70_dp">
        <TextView
            android:layout_marginTop="@dimen/margin_size_4_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="身份证背面"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_size_12_sp"
            android:layout_marginBottom="@dimen/margin_size_4_dp"
            android:text="请上传身份证背面照片，背面信息必须清楚"/>
        <ImageView
            android:id="@+id/upload_authen_fan_iv"
            android:layout_width="@dimen/margin_size_50_dp"
            android:layout_height="@dimen/margin_size_50_dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/upload_authen_fan_right_iv"
            android:layout_marginRight="@dimen/margin_size_10_dp"
            android:src="@drawable/main_certification_idcard"/>
        <ImageView
            android:id="@+id/upload_authen_fan_right_iv"
            android:layout_width="@dimen/margin_size_16_dp"
            android:layout_height="@dimen/margin_size_16_dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/main_common_more"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/upload_authen_zhiye_rl"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_size_8_dp"
        android:layout_width="match_parent"
        android:padding="@dimen/margin_size_10_dp"
        android:layout_height="@dimen/margin_size_80_dp">
        <TextView
            android:layout_marginTop="@dimen/margin_size_4_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="医师执业证 - 盖章页"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/upload_authen_zhiye_iv"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_size_12_sp"
            android:layout_marginRight="@dimen/margin_size_2_dp"
            android:layout_marginBottom="@dimen/margin_size_4_dp"
            android:text="清晰包含头像，编码，注册地点以及卫生厅盖章的彩色内页照"/>
        <ImageView
            android:id="@+id/upload_authen_zhiye_iv"
            android:layout_width="@dimen/margin_size_50_dp"
            android:layout_height="@dimen/margin_size_50_dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/upload_authen_zhiye_right_iv"
            android:layout_marginRight="@dimen/margin_size_10_dp"
            android:src="@drawable/main_certification_licensed"/>
        <ImageView
            android:id="@+id/upload_authen_zhiye_right_iv"
            android:layout_width="@dimen/margin_size_16_dp"
            android:layout_height="@dimen/margin_size_16_dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/main_common_more"/>
    </RelativeLayout>
    <View style="@style/line"/>
    <RelativeLayout
        android:id="@+id/upload_authen_zhicheng_rl"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="@dimen/margin_size_10_dp"
        android:layout_height="@dimen/margin_size_70_dp">
        <TextView
            android:layout_marginTop="@dimen/margin_size_4_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="医师职称证"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_size_12_sp"
            android:layout_marginBottom="@dimen/margin_size_4_dp"
            android:text="请上传带头像的职称证内页彩色照片"/>
        <ImageView
            android:id="@+id/upload_authen_zhicheng_iv"
            android:layout_width="@dimen/margin_size_50_dp"
            android:layout_height="@dimen/margin_size_50_dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/upload_authen_zhicheng_right_iv"
            android:layout_marginRight="@dimen/margin_size_10_dp"
            android:src="@drawable/main_certification_licensed"/>
        <ImageView
            android:id="@+id/upload_authen_zhicheng_right_iv"
            android:layout_width="@dimen/margin_size_16_dp"
            android:layout_height="@dimen/margin_size_16_dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/main_common_more"/>
    </RelativeLayout>

    <Button
        android:id="@+id/upload_authen_next_tv"
        android:textColor="@color/white"
        android:text="提交"
        android:gravity="center"
        android:layout_margin="@dimen/margin_size_20_dp"
        android:padding="@dimen/margin_size_10_dp"
        android:background="@drawable/shap_personal_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_40_dp"
        />
</LinearLayout>
