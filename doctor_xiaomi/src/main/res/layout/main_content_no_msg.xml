<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_main_videoconsult_nomsg"
    android:visibility="visible"
    android:layout_height="@dimen/margin_size_110_dp">

    <ImageView
        android:layout_width="@dimen/margin_size_75_dp"
        android:layout_height="@dimen/margin_size_75_dp"
        android:layout_marginLeft="@dimen/margin_size_12_dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/main_home_no_order"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/main_content_no_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_18_sp"
            android:textColor="@color/black"
            android:text="暂无视频订单"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_13_sp"
            android:layout_marginLeft="@dimen/margin_size_8_dp"
            android:layout_below="@+id/main_content_no_msg_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_size_14_dp"
            android:text="请合理设置坐诊时间，以便患者能顺利预约！"/>
    </RelativeLayout>
</LinearLayout>